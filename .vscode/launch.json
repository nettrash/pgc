{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/pgc/target/debug/pgc",
            "args": [
                "--config",
                "${workspaceFolder}/data/pgc.conf",
                "--command",
                "dump",
                "--server",
                "ubuntu-server.local",
                "--database",
                "consumer",
                "--scheme",
                "*",
                "--output",
                "${workspaceFolder}/data/dump.out",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
            "env": {
            },
        }
    ]
}